---
import Logo from './Logo.astro';
---

<header class="bg-white shadow-sm">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center py-4">
      <div class="flex items-center">
        <a href="/" class="flex items-center space-x-3">
          <Logo />
          <span class="text-2xl font-poppins font-bold text-navy">
            Upkeep<span class="text-bright-green">QR</span>
          </span>
        </a>
      </div>
      
      <div class="hidden md:flex space-x-8">
        <a href="/" class="text-gray-600 hover:text-navy transition-colors">Home</a>
        <a href="/order" class="text-gray-600 hover:text-navy transition-colors">Order Magnets</a>
        <a href="/request-pro" class="text-gray-600 hover:text-navy transition-colors">Request a Pro</a>
        <a href="/fee-listing" class="text-gray-600 hover:text-navy transition-colors">Fee Listing</a>
        <a href="/faq" class="text-gray-600 hover:text-navy transition-colors">FAQ</a>
        <a href="/contact" class="text-gray-600 hover:text-navy transition-colors">Contact</a>
      </div>
      
      <div class="flex items-center space-x-4">
        <a 
          href="/order" 
          class="bg-bright-green text-white px-6 py-2 rounded-lg font-medium hover:bg-green-500 transition-colors"
          onclick="gtag('event', 'cta_click', { 'cta_location': 'header', 'cta_text': 'Order Magnets' });"
        >
          Order Magnets
        </a>
      </div>
      
      <!-- Mobile menu button -->
      <div class="md:hidden">
        <button 
          type="button" 
          class="text-gray-600 hover:text-navy"
          id="mobile-menu-button"
        >
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>
    
    <!-- Mobile menu -->
    <div class="md:hidden hidden" id="mobile-menu">
      <div class="py-2 space-y-2">
        <a href="/" class="block text-gray-600 hover:text-navy py-2">Home</a>
        <a href="/order" class="block text-gray-600 hover:text-navy py-2">Order Magnets</a>
        <a href="/request-pro" class="block text-gray-600 hover:text-navy py-2">Request a Pro</a>
        <a href="/fee-listing" class="block text-gray-600 hover:text-navy py-2">Fee Listing</a>
        <a href="/faq" class="block text-gray-600 hover:text-navy py-2">FAQ</a>
        <a href="/contact" class="block text-gray-600 hover:text-navy py-2">Contact</a>
      </div>
    </div>
  </nav>
</header>

<script>
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  
  mobileMenuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>