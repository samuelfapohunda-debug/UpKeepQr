---
const links = [
  { href: '/', label: 'Home' },
  { href: '/order', label: 'Order magnet' },
  { href: '/request-a-pro', label: 'Request a Pro' },
  { href: '/fee-listing', label: 'Fee Listing' },
  { href: '/faq', label: 'FAQ' },
];
const STRIPE_1 = import.meta.env.PUBLIC_STRIPE_LINK_1 || 'https://buy.stripe.com/test_8x29AV0Q0cQB0KJbu5gIo00';
---

<header class="border-b border-white/10">
  <div class="container flex items-center justify-between h-16">
    <a href="/" class="flex items-center gap-3 no-underline">
      <img src="/favicon.svg" alt="UpkeepQR" class="h-8 w-8" />
      <span class="font-heading text-2xl font-extrabold">Upkeep<span class="text-lime">QR</span></span>
    </a>

    <nav class="hidden md:flex items-center gap-6">
      {links.map(l => <a class="nav-link" href={l.href}>{l.label}</a>)}
      <a class="btn btn-outline no-underline" href="/contact" aria-label="Contact Us">Contact Us</a>
      <a class="btn btn-primary no-underline" href={STRIPE_1} aria-label="Order magnets">Order magnets</a>
    </nav>
  </div>
</header>

<style>
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }
  
  .font-heading {
    font-family: 'Poppins', sans-serif;
  }
  
  .text-lime {
    color: #A6E22E;
  }
  
  .nav-link {
    color: #6b7280;
    text-decoration: none;
    transition: color 0.2s ease;
  }
  
  .nav-link:hover {
    color: #1E2A38;
  }
  
  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.5rem 1.5rem;
    border-radius: 0.5rem;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.2s ease;
    border: 1px solid transparent;
  }
  
  .btn-outline {
    color: #1E2A38;
    border-color: #1E2A38;
    background-color: transparent;
  }
  
  .btn-outline:hover {
    background-color: #1E2A38;
    color: white;
  }
  
  .btn-primary {
    background-color: #A6E22E;
    color: #1E2A38;
  }
  
  .btn-primary:hover {
    background-color: #8BC34A;
  }
  
  .no-underline {
    text-decoration: none;
  }
  
  .card {
    background: rgba(255, 255, 255, 0.1);
    border-radius: 0.5rem;
    padding: 1rem;
  }
  
  input, select, textarea {
    width: 100%;
    padding: 0.75rem;
    border: 1px solid rgba(255, 255, 255, 0.3);
    border-radius: 0.375rem;
    background: rgba(255, 255, 255, 0.1);
    color: white;
  }
  
  input::placeholder, textarea::placeholder {
    color: rgba(255, 255, 255, 0.6);
  }
  
  label {
    display: block;
    margin-bottom: 0.5rem;
    font-weight: 500;
    color: white;
  }
  
  .space-y-4 > * + * {
    margin-top: 1rem;
  }
  
  .grid {
    display: grid;
  }
  
  .md\:grid-cols-2 {
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
  }
  
  .gap-4 {
    gap: 1rem;
  }
  
  .gap-2 {
    gap: 0.5rem;
  }
  
  .flex {
    display: flex;
  }
  
  .items-start {
    align-items: flex-start;
  }
  
  .hidden {
    display: none;
  }
  
  .mt-1 {
    margin-top: 0.25rem;
  }
  
  .mt-6 {
    margin-top: 1.5rem;
  }
  
  .mb-2 {
    margin-bottom: 0.5rem;
  }
  
  .mb-6 {
    margin-bottom: 1.5rem;
  }
  
  .max-w-3xl {
    max-width: 48rem;
  }
  
  .py-16 {
    padding-top: 4rem;
    padding-bottom: 4rem;
  }
  
  .text-sm {
    font-size: 0.875rem;
  }
  
  .font-extrabold {
    font-weight: 800;
  }
  
  .text-4xl {
    font-size: 2.25rem;
  }
  
  .text-white\/70 {
    color: rgba(255, 255, 255, 0.7);
  }
  
  .text-white\/80 {
    color: rgba(255, 255, 255, 0.8);
  }
  
  .text-white\/60 {
    color: rgba(255, 255, 255, 0.6);
  }
  
  .border-lime {
    border-color: #A6E22E;
  }
  
  .border-red-400 {
    border-color: #f87171;
  }
  
  @media (min-width: 768px) {
    .md\:grid-cols-2 {
      grid-template-columns: repeat(2, 1fr);
    }
  }
</style>