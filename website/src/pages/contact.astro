---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Contact Us - UpkeepQR">
  <Header />
  
  <!-- Hero Section -->
  <section class="bg-navy text-white py-16">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-4xl md:text-5xl font-poppins font-bold mb-4">
        Get in Touch
      </h1>
      <p class="text-xl text-gray-300">
        Have questions about UpkeepQR? We're here to help!
      </p>
    </div>
  </section>

  <!-- Contact Form -->
  <section class="py-20 bg-light-gray">
    <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="bg-white rounded-lg shadow-lg p-8">
        <h2 class="text-2xl font-poppins font-bold mb-6 text-center">
          Send us a message
        </h2>
        
        <form id="contact-form" data-form-type="contact">
          <div class="mb-6">
            <label for="name" class="block text-sm font-semibold text-gray-700 mb-2">
              Name *
            </label>
            <input 
              type="text" 
              id="name" 
              name="name" 
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-bright-green focus:border-transparent"
              placeholder="Your full name"
            >
          </div>
          
          <div class="mb-6">
            <label for="email" class="block text-sm font-semibold text-gray-700 mb-2">
              Email *
            </label>
            <input 
              type="email" 
              id="email" 
              name="email" 
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-bright-green focus:border-transparent"
              placeholder="your.email@example.com"
            >
          </div>
          
          <div class="mb-6">
            <label for="message" class="block text-sm font-semibold text-gray-700 mb-2">
              Message *
            </label>
            <textarea 
              id="message" 
              name="message" 
              rows="5" 
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-bright-green focus:border-transparent"
              placeholder="How can we help you?"
            ></textarea>
          </div>
          
          <button 
            type="submit" 
            class="w-full bg-bright-green text-white px-6 py-3 rounded-lg font-semibold hover:bg-green-500 transition-colors disabled:opacity-50"
          >
            <span class="submit-text">Send Message</span>
            <span class="loading-text hidden">Sending...</span>
          </button>
        </form>
        
        <div id="form-success" class="hidden mt-6 p-4 bg-green-100 border border-green-300 rounded-lg">
          <p class="text-green-800">Thanks for reaching out! We'll get back to you within 24 hours.</p>
        </div>
        
        <div id="form-error" class="hidden mt-6 p-4 bg-red-100 border border-red-300 rounded-lg">
          <p class="text-red-800">Sorry, there was an error sending your message. Please try again or email us directly at support@upkeepqr.com.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Info -->
  <section class="py-16 bg-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-2xl font-poppins font-bold mb-8">Other ways to reach us</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div>
          <h3 class="font-semibold mb-2">Email</h3>
          <p class="text-gray-600">support@upkeepqr.com</p>
        </div>
        <div>
          <h3 class="font-semibold mb-2">Response Time</h3>
          <p class="text-gray-600">Within 24 hours</p>
        </div>
        <div>
          <h3 class="font-semibold mb-2">Follow Us</h3>
          <div class="flex justify-center space-x-4">
            <a href="https://facebook.com/upkeepqr" class="text-bright-green hover:text-green-500">Facebook</a>
            <a href="https://instagram.com/upkeepqr" class="text-bright-green hover:text-green-500">Instagram</a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <Footer />
</Layout>

<script>
  import { submitForm } from '../utils/formHandler.js';
  
  document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('contact-form');
    if (form) {
      form.addEventListener('submit', submitForm);
    }
  });
</script>