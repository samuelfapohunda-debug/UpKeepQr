---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Request a Pro - UpkeepQR">
  <Header />
  
  <!-- Hero Section -->
  <section class="bg-navy text-white py-16">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-4xl md:text-5xl font-poppins font-bold mb-4">
        Request a <span class="text-bright-green">Professional</span>
      </h1>
      <p class="text-xl text-gray-300">
        Connect with trusted local professionals for all your home maintenance needs
      </p>
    </div>
  </section>

  <!-- Request Pro Form -->
  <section class="py-20 bg-light-gray">
    <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="bg-white rounded-lg shadow-lg p-8">
        <h2 class="text-2xl font-poppins font-bold mb-6 text-center">
          Tell us what you need
        </h2>
        
        <form id="request-pro-form" data-form-type="request-pro">
          <div class="mb-6">
            <label for="name" class="block text-sm font-semibold text-gray-700 mb-2">
              Name *
            </label>
            <input 
              type="text" 
              id="name" 
              name="name" 
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-bright-green focus:border-transparent"
              placeholder="Your full name"
            >
          </div>
          
          <div class="mb-6">
            <label for="email" class="block text-sm font-semibold text-gray-700 mb-2">
              Email *
            </label>
            <input 
              type="email" 
              id="email" 
              name="email" 
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-bright-green focus:border-transparent"
              placeholder="your.email@example.com"
            >
          </div>
          
          <div class="mb-6">
            <label for="phone" class="block text-sm font-semibold text-gray-700 mb-2">
              Phone Number
            </label>
            <input 
              type="tel" 
              id="phone" 
              name="phone"
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-bright-green focus:border-transparent"
              placeholder="(555) 123-4567"
            >
          </div>
          
          <div class="mb-6">
            <label for="address" class="block text-sm font-semibold text-gray-700 mb-2">
              Address *
            </label>
            <input 
              type="text" 
              id="address" 
              name="address" 
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-bright-green focus:border-transparent"
              placeholder="123 Main St, City, State 12345"
            >
          </div>
          
          <div class="mb-6">
            <label for="service" class="block text-sm font-semibold text-gray-700 mb-2">
              Service Needed *
            </label>
            <select 
              id="service" 
              name="service" 
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-bright-green focus:border-transparent"
            >
              <option value="">Select a service...</option>
              <option value="hvac">HVAC Repair/Maintenance</option>
              <option value="plumbing">Plumbing</option>
              <option value="electrical">Electrical Work</option>
              <option value="roofing">Roofing</option>
              <option value="flooring">Flooring</option>
              <option value="painting">Painting</option>
              <option value="landscaping">Landscaping</option>
              <option value="appliance-repair">Appliance Repair</option>
              <option value="handyman">General Handyman</option>
              <option value="other">Other</option>
            </select>
          </div>
          
          <div class="mb-6">
            <label for="urgency" class="block text-sm font-semibold text-gray-700 mb-2">
              Urgency *
            </label>
            <select 
              id="urgency" 
              name="urgency" 
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-bright-green focus:border-transparent"
            >
              <option value="">Select urgency level...</option>
              <option value="emergency">Emergency (within 24 hours)</option>
              <option value="urgent">Urgent (within a few days)</option>
              <option value="soon">Soon (within a week)</option>
              <option value="flexible">Flexible (within a month)</option>
            </select>
          </div>
          
          <div class="mb-6">
            <label for="details" class="block text-sm font-semibold text-gray-700 mb-2">
              Additional Details
            </label>
            <textarea 
              id="details" 
              name="details" 
              rows="4"
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-bright-green focus:border-transparent"
              placeholder="Please describe the issue or project in detail..."
            ></textarea>
          </div>
          
          <button 
            type="submit" 
            class="w-full bg-bright-green text-white px-6 py-3 rounded-lg font-semibold hover:bg-green-500 transition-colors disabled:opacity-50"
          >
            <span class="submit-text">Request Professional</span>
            <span class="loading-text hidden">Submitting...</span>
          </button>
        </form>
        
        <div id="form-success" class="hidden mt-6 p-4 bg-green-100 border border-green-300 rounded-lg">
          <p class="text-green-800">Thanks for your request! We'll connect you with a local professional shortly.</p>
        </div>
        
        <div id="form-error" class="hidden mt-6 p-4 bg-red-100 border border-red-300 rounded-lg">
          <p class="text-red-800">Sorry, there was an error submitting your request. Please try again or contact us directly.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- How it Works -->
  <section class="py-16 bg-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-poppins font-bold text-center mb-12">How it works</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="text-center">
          <div class="w-16 h-16 bg-bright-green rounded-full flex items-center justify-center mx-auto mb-4">
            <span class="text-white font-bold text-xl">1</span>
          </div>
          <h3 class="font-semibold mb-2">Submit Your Request</h3>
          <p class="text-gray-600">Tell us about your project and location</p>
        </div>
        <div class="text-center">
          <div class="w-16 h-16 bg-bright-green rounded-full flex items-center justify-center mx-auto mb-4">
            <span class="text-white font-bold text-xl">2</span>
          </div>
          <h3 class="font-semibold mb-2">We Find a Pro</h3>
          <p class="text-gray-600">We match you with qualified local professionals</p>
        </div>
        <div class="text-center">
          <div class="w-16 h-16 bg-bright-green rounded-full flex items-center justify-center mx-auto mb-4">
            <span class="text-white font-bold text-xl">3</span>
          </div>
          <h3 class="font-semibold mb-2">Get Connected</h3>
          <p class="text-gray-600">The professional contacts you directly to schedule</p>
        </div>
      </div>
    </div>
  </section>

  <Footer />
</Layout>

<script>
  import { submitForm } from '../utils/formHandler.js';
  
  document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('request-pro-form');
    if (form) {
      form.addEventListener('submit', submitForm);
    }
  });
</script>