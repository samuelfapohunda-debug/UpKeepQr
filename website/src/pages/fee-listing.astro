---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Fee Listing - UpkeepQR">
  <Header />
  
  <!-- Hero Section -->
  <section class="bg-navy text-white py-16">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-4xl md:text-5xl font-poppins font-bold mb-4">
        Property <span class="text-bright-green">Fee Listing</span>
      </h1>
      <p class="text-xl text-gray-300">
        List and showcase your property with ease through our platform
      </p>
    </div>
  </section>

  <!-- Fee Listing Form -->
  <section class="py-20 bg-light-gray">
    <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="bg-white rounded-lg shadow-lg p-8">
        <h2 class="text-2xl font-poppins font-bold mb-6 text-center">
          Submit your property
        </h2>
        
        <form id="fee-listing-form" data-form-type="fee-listing">
          <div class="mb-6">
            <label for="name" class="block text-sm font-semibold text-gray-700 mb-2">
              Name *
            </label>
            <input 
              type="text" 
              id="name" 
              name="name" 
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-bright-green focus:border-transparent"
              placeholder="Your full name"
            >
          </div>
          
          <div class="mb-6">
            <label for="email" class="block text-sm font-semibold text-gray-700 mb-2">
              Email *
            </label>
            <input 
              type="email" 
              id="email" 
              name="email" 
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-bright-green focus:border-transparent"
              placeholder="your.email@example.com"
            >
          </div>
          
          <div class="mb-6">
            <label for="phone" class="block text-sm font-semibold text-gray-700 mb-2">
              Phone Number
            </label>
            <input 
              type="tel" 
              id="phone" 
              name="phone"
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-bright-green focus:border-transparent"
              placeholder="(555) 123-4567"
            >
          </div>
          
          <div class="mb-6">
            <label for="property-address" class="block text-sm font-semibold text-gray-700 mb-2">
              Property Address *
            </label>
            <input 
              type="text" 
              id="property-address" 
              name="property-address" 
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-bright-green focus:border-transparent"
              placeholder="123 Main St, City, State 12345"
            >
          </div>
          
          <div class="mb-6">
            <label for="property-type" class="block text-sm font-semibold text-gray-700 mb-2">
              Property Type *
            </label>
            <select 
              id="property-type" 
              name="property-type" 
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-bright-green focus:border-transparent"
            >
              <option value="">Select property type...</option>
              <option value="single-family">Single Family Home</option>
              <option value="townhouse">Townhouse</option>
              <option value="condo">Condominium</option>
              <option value="multi-family">Multi-Family</option>
              <option value="commercial">Commercial</option>
              <option value="land">Land/Vacant Lot</option>
              <option value="other">Other</option>
            </select>
          </div>
          
          <div class="mb-6">
            <label for="square-footage" class="block text-sm font-semibold text-gray-700 mb-2">
              Square Footage *
            </label>
            <input 
              type="number" 
              id="square-footage" 
              name="square-footage" 
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-bright-green focus:border-transparent"
              placeholder="e.g. 2500"
              min="100"
              max="50000"
            >
          </div>
          
          <div class="mb-6">
            <label for="bedrooms" class="block text-sm font-semibold text-gray-700 mb-2">
              Bedrooms
            </label>
            <select 
              id="bedrooms" 
              name="bedrooms"
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-bright-green focus:border-transparent"
            >
              <option value="">Select...</option>
              <option value="1">1</option>
              <option value="2">2</option>
              <option value="3">3</option>
              <option value="4">4</option>
              <option value="5">5</option>
              <option value="6+">6+</option>
            </select>
          </div>
          
          <div class="mb-6">
            <label for="bathrooms" class="block text-sm font-semibold text-gray-700 mb-2">
              Bathrooms
            </label>
            <select 
              id="bathrooms" 
              name="bathrooms"
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-bright-green focus:border-transparent"
            >
              <option value="">Select...</option>
              <option value="1">1</option>
              <option value="1.5">1.5</option>
              <option value="2">2</option>
              <option value="2.5">2.5</option>
              <option value="3">3</option>
              <option value="3.5">3.5</option>
              <option value="4+">4+</option>
            </select>
          </div>
          
          <div class="mb-6">
            <label for="listing-type" class="block text-sm font-semibold text-gray-700 mb-2">
              Listing Type *
            </label>
            <select 
              id="listing-type" 
              name="listing-type" 
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-bright-green focus:border-transparent"
            >
              <option value="">Select listing type...</option>
              <option value="for-sale">For Sale</option>
              <option value="for-rent">For Rent</option>
              <option value="sold">Recently Sold</option>
              <option value="coming-soon">Coming Soon</option>
            </select>
          </div>
          
          <div class="mb-6">
            <label for="notes" class="block text-sm font-semibold text-gray-700 mb-2">
              Additional Notes
            </label>
            <textarea 
              id="notes" 
              name="notes" 
              rows="4"
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-bright-green focus:border-transparent"
              placeholder="Any special features, recent upgrades, or other details about the property..."
            ></textarea>
          </div>
          
          <button 
            type="submit" 
            class="w-full bg-bright-green text-white px-6 py-3 rounded-lg font-semibold hover:bg-green-500 transition-colors disabled:opacity-50"
          >
            <span class="submit-text">Submit Property Listing</span>
            <span class="loading-text hidden">Submitting...</span>
          </button>
        </form>
        
        <div id="form-success" class="hidden mt-6 p-4 bg-green-100 border border-green-300 rounded-lg">
          <p class="text-green-800">Your property details have been received. Our team will review and follow up within 24 hours.</p>
        </div>
        
        <div id="form-error" class="hidden mt-6 p-4 bg-red-100 border border-red-300 rounded-lg">
          <p class="text-red-800">Sorry, there was an error submitting your property. Please try again or contact us directly.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Benefits Section -->
  <section class="py-16 bg-white">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-poppins font-bold text-center mb-12">Why list with us?</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="text-center">
          <div class="text-4xl mb-4">üè†</div>
          <h3 class="font-semibold mb-2">Smart Property Management</h3>
          <p class="text-gray-600">Each property gets UpkeepQR integration for maintenance tracking</p>
        </div>
        <div class="text-center">
          <div class="text-4xl mb-4">üì±</div>
          <h3 class="font-semibold mb-2">QR Code Marketing</h3>
          <p class="text-gray-600">Unique QR codes for virtual tours and property details</p>
        </div>
        <div class="text-center">
          <div class="text-4xl mb-4">üéØ</div>
          <h3 class="font-semibold mb-2">Targeted Exposure</h3>
          <p class="text-gray-600">Reach qualified buyers and renters in your area</p>
        </div>
      </div>
    </div>
  </section>

  <Footer />
</Layout>

<script>
  import { submitForm } from '../utils/formHandler.js';
  
  document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('fee-listing-form');
    if (form) {
      form.addEventListener('submit', submitForm);
    }
  });
</script>