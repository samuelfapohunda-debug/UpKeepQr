        ],
        cta: {
          text: 'Order Now',
          href: '/contact',
          analytics: "typeof gtag !== 'undefined' && gtag('event', 'purchase', { 'transaction_id': '100-pack', 'value': 299, 'currency': 'USD' });"
        },
        popular: true
      },
      {
        name: '300 Pack',
