  <!-- Hero Section -->
  <Hero
    title="Terms of Service"
    subtitle="Terms and conditions for using UpkeepQR"
    class="bg-primary-900"
  />

  <!-- Terms Content -->
  <ContentSection
    lastUpdated="September 2024"
  >
        
