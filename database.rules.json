{
  "rules": {
    ".read": false,
    ".write": false,
    "agents": {
      "$agentId": {
        ".read": "auth != null && auth.uid == $agentId",
        ".write": "auth != null && auth.uid == $agentId"
      }
    },
    "magnetBatches": {
      "$batchId": {
        ".read": "auth != null && data.child('agentId').val() == auth.uid",
        ".write": "auth != null && (data.child('agentId').val() == auth.uid || newData.child('agentId').val() == auth.uid)"
      }
    },
    "magnets": {
